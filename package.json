{
  "name": "source",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:implode && npm run build:img && npm run build:js && npm run build:js_vendor && npm run build:css && npm run build:modernizr",
    "build:img": "cp ./source/images/* ./assets/images",
    "build:js": "./node_modules/.bin/browserify ./source/javascript/main.js -d -p [./node_modules/minifyify/lib/index.js --map ./assets/javascript/bundle.js.map --output ./assets/javascript/bundle.js.map] > assets/javascript/bundle.js",
    "build:js_vendor": "cp ./source/javascript/vendor/* assets/javascript/vendor/",
    "build:css": "./node_modules/.bin/stylus --compress --use ./node_modules/autoprefixer-stylus/index.js source/stylesheets/non_critical.styl -o assets/stylesheets/non_critical.css",
    "build:modernizr": "./node_modules/modernizr/bin/modernizr -u -c modernizr.json -d source/javascript/vendor/",
    "build:implode": "rm -rf ./assets && mkdir -p assets/images assets/javascript assets/javascript/vendor assets/stylesheets",
    "watch": "./node_modules/.bin/parallelshell 'node index.js' 'npm run watch:css' 'npm run watch:js' 'npm run watch:img' 'npm run build:modernizr' 'npm run browser-sync'",
    "watch:img": "./node_modules/.bin/watch 'npm run build:img' source/images",
    "watch:js": "./node_modules/.bin/watch 'npm run build:js' source/javascript",
    "watch:css": "npm run build:css -- --watch",
    "watch:modernizr": "./node_modules/.bin/watch 'npm run build:modernizr' modernizr.json",
    "browser-sync": "./node_modules/.bin/browser-sync start --config bs-config.js",
    "deploy": "./node_modules/.bin/fly hosting"
  },
