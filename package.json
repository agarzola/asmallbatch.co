{
  "name": "source",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node index.js",
    "test": "./node_modules/.bin/mocha './lib/**/*.test.js'",
    "prebuild": "npm run build:implode",
    "build": "npm run build:img && npm run build:js && npm run build:modernizr && npm run build:jsvendor && npm run build:css && npm run build:markup",
    "build:img": "cp -R ./source/images/* ./assets/images",
    "build:js": "./node_modules/.bin/browserify ./source/javascript/main.js -d -p [./node_modules/minifyify/lib/index.js --map ./assets/javascript/bundle.js.map --output ./assets/javascript/bundle.js.map] > assets/javascript/bundle.js",
    "build:jsvendor": "cp -R ./source/javascript/vendor/* assets/javascript/vendor/",
    "build:markup": "cp -R ./source/markup/* ./assets/markup/",
    "build:css": "./node_modules/.bin/stylus --compress --use ./node_modules/autoprefixer-stylus/index.js source/stylesheets/*.styl -o assets/stylesheets/",
    "build:modernizr": "./node_modules/modernizr/bin/modernizr -u -c dev/modernizr.json -d source/javascript/vendor/",
    "build:implode": "rm -rf ./assets && mkdir -p assets/images assets/javascript assets/javascript/vendor assets/stylesheets assets/markup assets/markup/partials",
    "watch": "./node_modules/.bin/parallelshell --verbose 'npm run watch:app' 'npm run watch:css' 'npm run watch:js' 'npm run watch:markup' 'npm run watch:img' 'npm run build:modernizr' 'npm run browser-sync'",
    "watch:img": "./node_modules/.bin/watch 'npm run build:img' source/images",
    "watch:js": "./node_modules/.bin/watch 'npm run build:js' source/javascript",
    "watch:markup": "./node_modules/.bin/watch 'rsync -r -u source/markup assets' source/markup",
    "watch:css": "npm run build:css -- --watch",
    "watch:modernizr": "./node_modules/.bin/watch 'npm run build:modernizr' modernizr.json",
    "watch:app": "./node_modules/.bin/nodemon --config dev/nodemon.json --ext js,pug --watch lib --watch assets --watch index.js",
    "browser-sync:reload": "NODE_TLS_REJECT_UNAUTHORIZED=0 ./node_modules/.bin/browser-sync reload --url https://localhost:3000",
    "browser-sync": "./node_modules/.bin/browser-sync start --config dev/bs-config.js",
    "certs": "openssl req -x509 -newkey rsa:2048 -keyout certs/key.pem -out certs/cert.pem -days 9999 -nodes",
    "deploy": "./node_modules/.bin/fly hosting --flightplan dev/flightplan.js"
  },
  "contributors": [
    "Alfonso GÃ³mez-Arzola <alfonso@asmallbatch.co>",
    "Arne Heggestad <arne@asmallbatch.co>"
  ],
  "license": "UNLICENSED",
  "dependencies": {
    "jstransformer-autoprefixer": "^1.1.0",
    "jstransformer-markdown-it": "^0.2.3",
    "jstransformer-stylus": "^1.0.0",
    "jstransformer-supermarked": "^0.1.0",
    "pug": "^2.0.0-beta4"
  },
  "devDependencies": {
    "autoprefixer-stylus": "^0.9.4",
    "browser-sync": "^2.13.0",
    "browserify": "^13.1.0",
    "flightplan": "^0.6.14",
    "minifyify": "^7.3.3",
    "mocha": "^3.0.1",
    "modernizr": "^3.3.1",
    "node-mocks-http": "^1.5.2",
    "nodemon": "^1.10.0",
    "parallelshell": "^2.0.0",
    "proxyquire": "^1.7.10",
    "should": "^10.0.0",
    "sinon": "^1.17.5",
    "stylus": "^0.54.5",
    "watch": "^0.19.1",
    "zenscroll": "^3.1.0",
    "zombie": "^4.2.1"
  },
  "private": true
}
