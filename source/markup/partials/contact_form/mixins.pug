mixin textarea (label, required)
  label(for=label) #{label}
    if !required
      | &nbsp;#[em (Optional)]
  textarea(name=label id=label required=required)
  if errors && errors[label]
    label(for=label).error= errors[label]

mixin radio (label, id, required)
  label(for=id) #{label}
  input(type='radio' name=id id=id required=required)
